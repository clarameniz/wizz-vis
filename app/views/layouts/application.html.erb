<!DOCTYPE html>
<html>
  <%= render partial: 'layouts/head' %>

  <body class='content-color'>
    <%= render partial: 'layouts/header' %>

    <%= yield %>

    <% flash.each do |message_type, message| %>
      <%= javascript_tag "Materialize.toast('#{escape_javascript(message)}', 4000)" %>
    <% end %>
  </body>
</html>
