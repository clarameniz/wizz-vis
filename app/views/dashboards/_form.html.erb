<% if @dashboard.persisted? %>
  <% breadcrumb :dashboard, @dashboard %>
<% else %>
  <% breadcrumb :new_dashboard, @dashboard %>
<% end %>

<div class='container'>
  <div class='card'>
    <div class='card-title'><%= @dashboard.persisted? ? 'Editing' : 'New' %> Dashboard</div>
      <%= simple_form_for(@dashboard, html: { class: 'col s12' }) do |f| %>
        <div class='card-content'>
          <div class='row'>
            <div class='col s12'>
              <%= f.error_notification %>
            </div>
          </div>
          <div class='row'>
            <div class='col s12'>
              <%= f.input :name, required: true %>
            </div>
          </div>
        </div>
        <div class='card-action'>
          <div class='row'>
            <%= f.button :submit, class: 'right primary-color' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
