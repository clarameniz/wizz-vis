<% breadcrumb :dashboards %>

<div class="container">
  <div class="card">
    <div class="card-title">Dashboards
      <%= link_to new_dashboard_path, class: "btn-floating btn-large halfway-fab waves-effect waves-light primary-color" do -%>
        <%= material_icon.add %>
      <% end -%>
    </div>
    <div class="card-content">
      <table class="bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @dashboards %>
        </tbody>
      </table>
      <div class="right-align">
        <%= paginate @dashboards %>
      </div>
    </div>
  </div>
</div>
